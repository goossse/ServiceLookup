@using ServiceLookup.BL.DTO
@using ServiceLookup.Models.ManageVM

@model RequestsViewModel

<h4 class="text-center">Мої бронювання (прийняті запити)</h4>
@await Html.PartialAsync("Partial/RequestsPartial.cshtml", Model.Requests)

<nav aria-label="...">
    <ul class="pagination justify-content-center">
        @if (Model.pageViewModel.HasPrev)
        {
            <li class="page-item">
                <a class="btn" asp-controller="Manage" asp-action="MyBookings" asp-route-Page="@(Model.pageViewModel.PageNumber-1)" tabindex="-1">Попередні</a>
            </li>
        }
        else
        {
            <li class="page-item disabled"><a class="page-link" tabindex="-1">Попередні</a></li>
        }
        @if (Model.pageViewModel.HasNext)
        {
            <li class="page-item">
                <a class="btn" asp-controller="Manage" asp-action="MyBookings" asp-route-Page="@(Model.pageViewModel.PageNumber+1)" tabindex="-1">Наступні</a>
            </li>
        }
        else
        {
            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">Наступні</a></li>
        }
    </ul>
</nav>