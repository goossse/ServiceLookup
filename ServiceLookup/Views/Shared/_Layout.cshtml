<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServiceLookup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServiceLookup.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar navbar-expand-lg bd-navbar sticky-top" style="background-color: #93fad4;">
        <nav class="container-xxl bd-gutter flex-wrap flex-lg-nowrap" aria-label="Main navigation">
            <button class="navbar-toggler p-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#bdSidebar"
                    aria-controls="bdSidebar" aria-label="Toggle side bar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="GetServices">ServiceLookup</a>
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="true"
                    aria-label="Розгортання навігації">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-area="" asp-controller="User"
                           asp-action="GetServices">Послуги</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="" asp-controller="User" asp-action="GetTypes">Категорії</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="" asp-controller="User" asp-action="GetUsers">Майстри</a>
                    </li>
                </ul>
                <form class="d-flex" role="search" method="get" asp-controller="User" asp-action="SearchByTitle">
                    <input class="form-control me-2" type="search" placeholder="Введіть назву послуги"
                           aria-label="Search" name="search">
                    <button class="btn btn-outline-success" type="submit">Пошук</button>
                </form>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </nav>
    </header>

    <div class="row">
        <div class="col col-auto bg-light">
            <aside class="bd-sidebar">
                <div class="offcanvas-lg offcanvas-start" tabindex="-1" id="bdSidebar"
                     aria-labelledby="bdSidebarOffcanvasLabel">
                    <div class="offcanvas-header border-bottom">
                        <h5 class="offcanvas-title" id="bdSidebarOffcanvasLabel">Меню користувача</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"
                                data-bs-target="#bdSidebar"></button>
                    </div>

                    <div class="offcanvas-body">
                        <ul class="nav nav-pills flex-column mb-auto">
                            <hr class=" d-none d-lg-inline" style="width: 280px;">
                            <li class="nav-item">
                                <a asp-controller="Manage" asp-action="MyServices" class="nav-link link-dark" aria-current="page">Мої послуги</a>
                            </li>
                            <li>
                                <a asp-controller="Manage" asp-action="MyBookings" class="nav-link link-dark">Мої бронювання</a>
                            </li>
                            <li>
                                <a asp-controller="Manage" asp-action="MyRequests" class="nav-link link-dark">Мої запити</a>
                            </li>
                            <li>
                                <a href="#" class="nav-link link-dark">Графік</a>
                            </li>
                            <li>
                                <a asp-controller="Client" asp-action="MyRequests" class="nav-link link-dark">Заявки</a>
                            </li>
                            <li>
                                <a asp-controller="Client" asp-action="MyReviews" class="nav-link link-dark">Відгуки</a>
                            </li>
                            <li>
                                <a asp-controller="Client" asp-action="MyProfile" class="nav-link link-dark">Мій профіль</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>

        <div class="col">
            <main class="bd-main order-1 bg-light">
                @RenderBody()
            </main>
        </div>
    </div>




    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ServiceLookup - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
