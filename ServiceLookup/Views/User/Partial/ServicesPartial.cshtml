@using ServiceLookup.BL.DTO
@model IEnumerable<ServiceDTO>


<div class="container">
    <div class="row row-cols-2 row-cols-lg-4 g-3">
        @foreach (var service in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="bg-image hover-overlay ripple">
                        @if (service.Image == null)
                        {
                            <img src="/images/icons/no_image.svg" class="img-fluid" style="width:20%">
                        }
                        else
                        {
                            <img src="@service.Image" class="img-fluid" style="width:100%">
                        }
                        <a>
                            <div class="mask" style="background-color: rgba(57, 192, 237, 0.2);"></div>
                        </a>
                    </div>
                    <div class="card-body">
                        <p class="card-text" style="font-size: large;">@service.Title</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/User/GetService/@service.Id" class="btn btn-sm btn-success">
                                    Послуга
                                </a>
                                <button href="/User/GetUser/@service.Id" type="button"
                                    class="btn btn-sm btn-outline-secondary">

                                    Майстер

                                </button>
                            </div>
                            <small class="text-muted">Сьогодні, 17:43</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
