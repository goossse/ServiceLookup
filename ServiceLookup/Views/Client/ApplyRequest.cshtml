@using ServiceLookup.Models.ClientVM

@model BookingViewModel

<h4 class="text-center py-3">Подання заявки на бронювання послуги</h4>
<div class="container py-5 bg-light">
    <div class="row">
        <div class="col-12 col-md-8">
            @await Html.PartialAsync("/Views/Client/Partial/CreateRequestPartial.cshtml", Model.Request)
        </div>
        <div class="col-12 col-md-4 mb-3">
            <img class="img-fluid img-thumbnail" src="@Model.Service.Image">
            <div class="mb-3 py-3">
                <h5 class="text-center">@Model.Service.Title</h5>
            </div>

            <dl class="row">
                <h5 class="col-9 text-start">Цiна</h5>
                @if (Model.Price == null)
                {
                    <h5 class="col-3 text-end">Не вказана</h5>
                }
                else
                {
                    <h5 class="col-3 text-end">@Model.Price.Value @Model.Price.Currency</h5>

                }
            </dl>
        </div>
    </div>
</div>
